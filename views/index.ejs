<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-slate-50 to-slate-100 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-4xl font-bold text-slate-900">My Blog</h1>
      <a id="newPostBtn" href="/new" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200">
        New Post
      </a>
    </div>

    <!-- Posts List -->
    <ul id="postsList" class="space-y-6">
      <% posts.forEach(post=> { %>
        <li class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-slate-200">
          <div class="mb-3">
            <h2 class="text-2xl font-bold text-slate-900 mb-2">
              <%=post.title%>
            </h2>
            <p class="text-sm text-slate-500">
              <% 
              const date = new Date(post.date);
              const formattedDate = date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              });
            %>
            <%= formattedDate %>
            </p>
          </div>
          
          <p class="text-slate-700 leading-relaxed mb-4">
            <%=post.content%>
          </p>
          
          <div class="flex items-center justify-between pt-4 border-t border-slate-200">
            <p class="text-sm text-slate-600">
              By: <span class="font-semibold"><%=post.author%></span>
            </p>
            <div class="flex gap-2">
              <a href="/edit/<%= post.id %>" class="inline-block bg-amber-500 hover:bg-amber-600 text-white font-medium py-1.5 px-4 rounded transition-colors duration-200 text-sm">
                Edit
              </a>
              <a href="/api/posts/delete/<%= post.id %>" class="inline-block bg-red-500 hover:bg-red-600 text-white font-medium py-1.5 px-4 rounded transition-colors duration-200 text-sm">
                Delete
              </a>
            </div>
          </div>
        </li>
        <% }); %>
    </ul>
  </div>

</body>

</html>
